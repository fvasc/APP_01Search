<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="fill_parent"    android:layout_height="fill_parent"    android:background="#dcdcdc" >    <ListView        android:id="@+id/lsViewEstab"        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:layout_alignParentLeft="true"        android:layout_alignParentTop="true"        android:background="#dcdcdc"        android:divider="@android:color/transparent"        android:dividerHeight="6dp" >    </ListView>    <ImageView        android:id="@+id/orda"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignParentLeft="true"        android:layout_below="@+id/lsViewEstab"        android:src="@drawable/orda" />    <ImageView        android:id="@+id/ordmaior"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignParentRight="true"        android:layout_below="@+id/lsViewEstab"        android:src="@drawable/ordmaior" />    <ImageView        android:id="@+id/ordz"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_below="@+id/lsViewEstab"        android:layout_marginLeft="28dp"        android:layout_toRightOf="@+id/orda"        android:src="@drawable/ordz" />    <ImageView        android:id="@+id/ordmenor"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignTop="@+id/orda"        android:layout_marginRight="31dp"        android:layout_toLeftOf="@+id/ordmaior"        android:src="@drawable/ordmenor" /></RelativeLayout>