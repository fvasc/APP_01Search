<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="5dp"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal" >

        <ImageView
            android:id="@+id/linha_codigobarras_imagem"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/linha_codigobarras_nome"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="bottom"
            android:singleLine="true"
            android:text="paralelepipedo"
            android:textColor="@android:color/white"
            android:textSize="22dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/linha_t2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="Marca:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#EEE8CD"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/linha_codigobarras_marca"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:text="12/12/12"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/linha_t1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="Departamento:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#EEE8CD"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/linha_codigobarras_depSub"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:text="145 itens"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="12dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>