<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_weight="0.58" >

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/linha_nome"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:singleLine="true"
                    android:text="paralelepipedo"
                    android:textColor="@android:color/white"
                    android:textSize="22dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/linha_t1"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="Duração padrão:"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#EEE8CD"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/linha_d1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:text="145 itens"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/linha_t2"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="Produtos:"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#EEE8CD"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/linha_d2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:text="12/12/12"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="12dp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/next" />
    </LinearLayout>

</LinearLayout>